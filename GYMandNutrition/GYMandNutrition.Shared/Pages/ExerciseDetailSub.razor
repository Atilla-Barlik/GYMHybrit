@code {
    [Parameter] public int Id { get; set; }
    [Inject] IExerciseDetailService exerciseDetailService { get; set; }
    [Inject] IAppUserExerciseProgramService appUserExerciseService { get; set; }
    private ExerciseDetailsResponseModel exercise;
    private AppUserExerciseProgramResponseModel addUpdateAppUserExerciseProgramRequest;
    private int ExerciseRepeat { get; set; }
    private int ExerciseSet { get; set; }
    private int DayNo { get; set; }
    private decimal ExerciseWeight { get; set; }
    private string toastMessage;
    private string toastClass;
    private bool showToast;
    DateTime dateTime;
    DateOnly date;
    
    bool t = true;

    protected override async Task OnInitializedAsync()
    {
        dateTime = DateTime.Now;
        date = DateOnly.FromDateTime(dateTime);
        exercise = await exerciseDetailService.GetExerciseDetailById(Id);
    }
    private async Task SubmitExerciseProgram()
    {
        addUpdateAppUserExerciseProgramRequest = new AppUserExerciseProgramResponseModel
        {
                ExerciseRepeat = ExerciseRepeat,
                ExerciseSet = ExerciseSet,
                ExerciseTotalBurnedKcal = 0, // Bu alan hesaplanabilir ya da başka bir değere sahip olabilir
                ExerciseDetailId = exercise.ExerciseDetailId, // Bunu dinamik olarak set edebilirsiniz, örneğin yönlendirme ile gelen ID
                ExerciseWeight = ExerciseWeight,
                AppUserId = 1, // Kullanıcı ID'si
                DayNo = DayNo,
                Date = date
        };

        var response = appUserExerciseService.AddAppUserExercise(addUpdateAppUserExerciseProgramRequest);

        if (t)
        {
            // Başarılı mesajı
            toastMessage = "Veri başarıyla kaydedildi!";
            toastClass = "text-bg-success"; // Bootstrap başarı sınıfı
            showToast = true; // Toast mesajını göster
            StateHasChanged(); // UI güncellemesi
            await Task.Delay(2000); // Mesajın bir süre görünmesi için bekle
            nm.NavigateTo("/body-exercise"); // Yönlendirme
        }
        else
        {
            // Hata mesajı
            toastMessage = "Veri kaydedilirken bir hata oluştu!";
            toastClass = "text-bg-danger"; // Bootstrap hata sınıfı
            showToast = true; // Toast mesajını göster
            StateHasChanged(); // UI güncellemesi
        }
       
    }
    private void CloseToast()
    {
        showToast = false; // Toast mesajını gizle
        StateHasChanged(); // UI güncellemesi
    }
    
}

